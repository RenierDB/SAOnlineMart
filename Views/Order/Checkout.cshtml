@model SAOnlineMart.Models.OrderViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<div class="container mt-4">
    <form asp-action="Checkout" method="post">
        <div class="card mb-4 text-dark">
            <div class="card-header text-dark">Shipping Address</div>
            <div class="container p-2">
                <div class="form-group">
                    <label asp-for="ShippingAddress.AddressLine" class="control-label"></label>
                    <input asp-for="ShippingAddress.AddressLine" class="form-control" />
                    <span asp-validation-for="ShippingAddress.AddressLine" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShippingAddress.City" class="control-label"></label>
                    <input asp-for="ShippingAddress.City" class="form-control" />
                    <span asp-validation-for="ShippingAddress.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShippingAddress.State" class="control-label"></label>
                    <input asp-for="ShippingAddress.State" class="form-control" />
                    <span asp-validation-for="ShippingAddress.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShippingAddress.ZipCode" class="control-label"></label>
                    <input asp-for="ShippingAddress.ZipCode" class="form-control" />
                    <span asp-validation-for="ShippingAddress.ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShippingAddress.Country" class="control-label"></label>
                    <input asp-for="ShippingAddress.Country" class="form-control" />
                    <span asp-validation-for="ShippingAddress.Country" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card mb-4 text-dark">
            <div class="card-header text-dark">Payment Details</div>
            <div class="container p-2">
                <div class="form-group">
                    <label asp-for="Payment.CardHolderName" class="control-label"></label>
                    <input asp-for="Payment.CardHolderName" class="form-control" />
                    <span asp-validation-for="Payment.CardHolderName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Payment.CardNumber" class="control-label"></label>
                    <input asp-for="Payment.CardNumber" class="form-control" />
                    <span asp-validation-for="Payment.CardNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Payment.ExpirationDate" class="control-label"></label>
                    <input asp-for="Payment.ExpirationDate" class="form-control" />
                    <span asp-validation-for="Payment.ExpirationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Payment.CVV" class="control-label"></label>
                    <input asp-for="Payment.CVV" class="form-control" />
                    <span asp-validation-for="Payment.CVV" class="text-danger"></span>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
</div>